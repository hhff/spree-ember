<div class="row">
  <div class="small-12 columns text-center">
    <h1>Welcome to Spree Ember</h1>
    <h6><strong>Note:</strong> You can delete the "Welcome to Ember.js" message in
      your application.hbs file.</h6>

    <div class="panel">
      {{spree.config.apiHost}}
    </div>

    {{#if session}}
      <div class="panel">
        Spree Ember Auth
        {{session.crossOriginWhitelist}}
        <p>Current User: {{session.currentUser}}</p>
      </div>
    {{/if}}

    {{#link-to 'spree.products.index'}}
      <button>Products</button>
    {{/link-to}}
  </div>
</div>
