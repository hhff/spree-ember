<div class="row">
  <h1>Cart</h1>
  <div class="small-12 columns">
    {{#if spree.currentOrder.lineItems.length}}
      {{spree-lineitems lineItems=spree.currentOrder.lineItems canRemoveItems=true}}
      {{spree-details order=spree.currentOrder}}
      {{#link-to 'spree.products.index'}}
        <button>Keep Shopping</button>
      {{/link-to}}
      <button {{action 'transitionToCheckout'}}>Checkout</button>
    {{else}}
      <h1>Your cart is empty.</h1>
      {{#link-to 'spree.products.index'}}
        <button>Keep Shopping</button>
      {{/link-to}}
    {{/if}}
  </div>
</div>
