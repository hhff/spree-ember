{{spree-input value=source.number
              errors=source.errors.number
              placeholder="Card Number"
              attributeName="Card Number"}}
              
{{spree-input value=source.name
              errors=source.errors.name
              placeholder="Name"
              attributeName="Name"}}

<div class='row'>              
  <div class='small-4 columns'>
    {{spree-input value=source.month
                errors=source.errors.month
                placeholder="MM"
                attributeName="Month"}}
  </div>
  <div class='small-4 columns'>
    {{spree-input value=source.year 
                  placeholder="YYYY"
                  errors=source.errors.year
                  attributeName="Year"}}
  </div>
  <div class='small-4 columns'>
    {{spree-input value=source.verificationValue
                  errors=source.errors.verificationValue
                  placeholder="Verification Value"
                  attributeName="Verification Value"}}
  </div>            
</div>

