<div class="row">
  <div class="small-12 columns">
    <img src="{{selectedImage.largeUrl}}">
    <hr>
  </div>
  <div class="small-12 columns">
    <div class="row">
      {{#each images as |image|}}
        <div class="small-3 columns left" {{action 'selectImage' image}}>
          <img src="{{image.largeUrl}}">
        </div>
      {{/each}}
    </div>
  </div>
</div>
