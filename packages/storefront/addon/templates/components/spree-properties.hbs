{{#if properties.length}}
  <div class="row">
    <div class="small-12 columns">
      <hr>
      <h4>Properties</h4>
      <table>
        {{#each properties as |property|}}
          <tr>
            <td>{{property.presentation}}</td>
            <td>{{property.value}}</td>
          </tr>
        {{/each}}
      </table>
    </div>
  </div>
{{/if}}
